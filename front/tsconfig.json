{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"]
    },
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "es2018",
    "noEmit": true,
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src"]
}
